
<div class="container mt-4">
  <div class="card shadow-sm">
    <div class="card-header d-flex justify-content-between align-items-center">
      <h3 class="mb-0">Booking #<%= @booking.id %></h3>
        <span class="badge 
          <%= case @booking.status
            when "booked" then "bg-primary"
            when "checked_in" then "bg-success"
            when "checked_out" then "bg-warning"
            when "cancelled" then "bg-danger"
          end %>">
          <%= @booking.status.humanize %>
        </span>
    </div>

    <div class="card-body">
      <div class="row mb-3">
        <div class="col-md-6">
          <strong>Customer</strong><br>
          <%= @booking.customer.name %>
        </div>
        <div class="col-md-6">
          <strong>Room</strong><br>
          <%= @booking.room&.room_number || "Banquet" %>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <strong>Check In</strong><br>
          <%= l @booking.check_in, format: :long %>
        </div>
        <div class="col-md-6">
          <strong>Check Out</strong><br>
          <%= l @booking.check_out, format: :long %>
        </div>
      </div>

      <div class="row mb-3">
        <div class="col-md-6">
          <strong>Adults</strong><br>
          <%= @booking.adults %>
        </div>
        <div class="col-md-6">
          <strong>Children</strong><br>
          <%= @booking.children %>
        </div>
      </div>

      <% if @booking.comment.present? %>
        <div class="alert alert-info mt-3">
          <strong>Notes</strong><br>
          <%= simple_format(@booking.comment) %>
        </div>
      <% end %>
    </div>

    <!-- ACTION BAR -->
    <div class="card-footer d-flex justify-content-between align-items-center">
      <div>
        <%= link_to "Edit", edit_booking_path(@booking), class: "btn btn-outline-primary me-2" %>
        <%= link_to "Back", bookings_path, class: "btn btn-outline-secondary" %>
      </div>

      <div>
        <% if @booking.booked? %>
          <%= button_to "Check In",
                check_in_booking_path(@booking),
                method: :patch,
                class: "btn btn-success me-2" %>
        <% end %>

        <% if @booking.checked_in? %>
          <%= button_to "Check Out",
                check_out_booking_path(@booking),
                method: :patch,
                class: "btn btn-warning me-2" %>
        <% end %>

        <% if @booking.booked? || @booking.checked_in? %>
          <%= button_to "Cancel",
                cancel_booking_path(@booking),
                method: :patch,
                data: { confirm: "Are you sure?" },
                class: "btn btn-danger" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
