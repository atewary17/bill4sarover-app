<h1>Booking Details</h1>

<p><strong>Customer:</strong> <%= @booking.customer.name %></p>
<p><strong>Room:</strong> <%= @booking.room&.room_number || "Banquet" %></p>
<p><strong>Check In:</strong> <%= @booking.check_in %></p>
<p><strong>Check Out:</strong> <%= @booking.check_out %></p>
<p><strong>Adults:</strong> <%= @booking.adults %></p>
<p><strong>Children:</strong> <%= @booking.children %></p>
<p><strong>Status:</strong> <%= @booking.status %></p>

<%= link_to "Edit", edit_booking_path(@booking) %> |
<%= link_to "Back", bookings_path %>

<% if @booking.booked? || @booking.checked_in? %>
  <br><br>
  <%= button_to "Cancel Booking",
        cancel_booking_path(@booking),
        method: :patch,
        data: { confirm: "Are you sure you want to cancel this booking?" },
        class: "btn-danger" %>
<% end %>
